[core]
editor = vim
autocrlf = input
safecrlf = true
# prevent garbled text (mainly for Japanese)
quotepath = false

# git fetch --prune, delete the branch that deleted in remote
[fetch]
prune = true

# git pull --ff-only, not to make merge commit
[pull]
ff = only

# git merge --no-ff, make merge commit
[merge]
ff = false

[push]
default = simple
